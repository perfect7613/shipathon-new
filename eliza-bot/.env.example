# Model Provider (Anthropic/Claude)
ANTHROPIC_API_KEY=your-anthropic-key

# =============================================================================
# TWITTER AUTHENTICATION - Choose ONE option:
# =============================================================================

# OPTION 1: Cookie-Based Auth (RECOMMENDED - bypasses API credit requirements)
# The plugin logs in with your credentials and uses session cookies
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password
TWITTER_EMAIL=your_email@example.com

# OPTION 2: OAuth 1.0a API Credentials (requires Twitter Developer API credits)
# TWITTER_API_KEY=your_api_key
# TWITTER_API_SECRET_KEY=your_api_secret
# TWITTER_ACCESS_TOKEN=your_access_token
# TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret

# =============================================================================
# TWITTER BEHAVIOR SETTINGS
# =============================================================================
TWITTER_POST_ENABLE=true
TWITTER_SEARCH_ENABLE=false
TWITTER_POST_IMMEDIATELY=false
TWITTER_POST_INTERVAL_MIN=90
TWITTER_POST_INTERVAL_MAX=180
TWITTER_DRY_RUN=true  # Set to false for production

# =============================================================================
# DATABASE
# =============================================================================
PGLITE_DATA_DIR=./data/pglite

# =============================================================================
# NEWSLETTER API (for fetching articles)
# =============================================================================
NEWSLETTER_API_URL=http://localhost:3002/api

# =============================================================================
# OTHER
# =============================================================================
LOG_LEVEL=info
POST_ON_STARTUP=true  # Set to false in production
